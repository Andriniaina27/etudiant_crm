<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='contact_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="string">Email Étudiant</attribute>
            </xpath>

            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Responsable / Encadreur</attribute>
            </xpath>

            <!-- Ajouter les champs étudiants -->
            <xpath expr="//sheet" position="before">
                <group string="Informations Étudiant">
                    <field name="etudiant_id"/>
                    <field name="numero_etudiant"/>
                    <field name="projet_pfe"/>
                    <field name="tuteur_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>